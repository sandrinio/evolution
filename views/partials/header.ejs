    <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
    <![endif]-->
    <!-- Document Title
    ============================================= -->
    <title>Knowledge Hub</title>
</head>

<body class="stretched">

<!-- Document Wrapper
============================================= -->
<div id="wrapper" class="clearfix">

    <!-- Header
    ============================================= -->

    <header id="header" class="sticky-header">

        <div id="header-wrap">

            <div class="container clearfix">

                <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>
                <% if(currentUser != undefined || page_name === 'none') { %>
                <div id="top-account" class="dropdown">
                    <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        <img src="../../uploads/userPictures/<%= currentUser.pic %>" class="user-nav-pic" ><%= currentUser.firstname + " " + currentUser.lastname %></a>
                    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                        <li <% if(page_name === 'profile'){ %> class="profile-current" <% } %>><a href="/profile">Profile</a></li>
                        <li><a href="/logout">Logout <i class="icon-signout"></i></a></li>
                    </ul>
                </div>

                <% } %>

                <!-- Primary Navigation
                ============================================= -->
                <nav id="primary-menu" class="style-3">
                    <ul>
                        <li <% if(page_name === 'instructions'){ %> class="current" <% } %>><a href="/instructions"><div>Knowledge Hub</div></a></li>
                        <!--<li <% if(page_name === 'home'){ %> class="current" <% } %>><a href="/home"><div>Solved</div></a></li>-->
                        <li <% if(page_name === 'reqs'){ %> class="current" <% } %>><a href="/request"><div>Requests</div></a></li>
                        <li <% if(page_name === 'offices'){ %> class="current" <% } %>><a href="/offices"><div>Offices</div></a></li>
                        <li <% if(page_name === 'new post'){ %> class="current" <% } %>><a href="/home/new-post"><div>Write a Post</div></a></li>

                        <!--<li <% if(page_name === 'quiz'){ %> class="current" <% } %>><a href="/quiz"><div>ტესტი</div></a></li>-->
                        <!--<li <% if(page_name === 'target'){ %> class="current" <% } %>><a href="/target"><div>გეგმა</div></a></li>-->
                        <!--<li <% if(page_name === 'stock'){ %> class="current" <% } %>><a href="/stock"><div>ნაშთი</div></a></li>-->
                        <!--<li <% if(page_name === 'evaluation'){ %> class="current" <% } %>><a href="/evolution"><div>შეფასება</div></a></li>-->
                    </ul>
                    <div id="top-search">
                        <a href="#" id="top-search-trigger"><i class="icon-search3"></i><i class="icon-line-cross"></i></a>
                        <form action="/posts/search" method="get">
                            <input type="text" name="q" class="form-control" value="" placeholder="Type &amp; Hit Enter..">
                        </form>
                    </div><!-- #top-search end -->

                </nav><!-- #primary-menu end -->


            </div>

        </div>
        
    </header><!-- #header end -->
    <% if(error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissable fade in text-20"  role="alert">
        <span class="close">&times;</span>
        <storng class="text-center"><%= error %></storng>
    </div>
    <% } %>
    <% if(success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissable fade in text-20" role="alert">
        <span class="close">&times;</span>
        <strong class="text-center"><%= success %></strong>
    </div>
<% } %>
